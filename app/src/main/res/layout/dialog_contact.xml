<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="365dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/round"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="Nom Docteur"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Desc Docteur"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dialog_phone_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:text="Num Téléphone"
            android:textColor="#2962FF" />

        <TextView
            android:id="@+id/dialog_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email docteur"
            android:textColor="#AA00FF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/favbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_favorite_black_24dp" />

        <Button
            android:id="@+id/dialog_btn_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/round_two"
            android:backgroundTint="#0091EA"
            android:drawableLeft="@drawable/ic_call_black_24dp"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Appeler"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/dialog_btn_messag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/round_up"
            android:backgroundTint="#0091EA"
            android:drawableLeft="@android:drawable/stat_notify_chat"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:text="Conversation"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF" />

    </LinearLayout>



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dialog_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profidoc" />
</RelativeLayout>