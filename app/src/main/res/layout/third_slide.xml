<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blblue"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="26dp"
        android:tint="#004CAF50"
        app:layout_constraintBottom_toTopOf="@+id/slide_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/locationhospit" />

    <TextView
        android:id="@+id/slide_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_3"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal"
        android:text="@string/slide_3_title"
        android:textColor="#FCFBF8"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/slide_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_3" />

    <TextView
        android:id="@+id/slide_desc"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_below="@id/slide_title"
        android:layout_marginStart="5dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="169dp"
        android:gravity="center_horizontal"
        android:text="@string/slide_3_desc"
        android:textColor="#C3FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide_title" />

</androidx.constraintlayout.widget.ConstraintLayout>